<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_4_1.xsd"
	version="4.1">

	<servlet>
		<servlet-name>TServletExample</servlet-name>
		<servlet-class>com.share.soa.thrift.server.ThriftHttpServer</servlet-class>
		<async-supported>true</async-supported>
		<load-on-startup>1</load-on-startup>
		<init-param>
			<!-- 需要处理哪个接口 -->
			<param-name>tProcessor</param-name>
			<param-value>classpath:share-test.xml</param-value>
		</init-param>
		<init-param>
			<!-- 数据传输协议 -->
			<param-name>tProtocol</param-name>
			<param-value>org.apache.thrift.protocol.TCompactProtocol</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>TServletExample</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
</web-app>